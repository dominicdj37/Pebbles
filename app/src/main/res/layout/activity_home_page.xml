<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/spash_gradient"
    app:layoutDescription="@xml/activity_home_page_scene">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topContentLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="-20dp"
        android:alpha="0"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0">

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/welcomeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"

        android:layout_marginTop="16dp"
        android:text="Welcome back!"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sideMenuIcon" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.85" />

    <ProgressBar
        android:id="@+id/waterLevelProgressBarBack"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:progress="100"
        android:progressDrawable="@drawable/bg_progress_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/welcomeTextView" />

    <ProgressBar
        android:id="@+id/waterLevelProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:progress="90"
        android:progressDrawable="@drawable/bg_progress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/welcomeTextView" />

    <TextView
        android:id="@+id/progressText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="20%"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24sp"
        app:autoSizeTextType="none"
        app:layout_constraintBottom_toBottomOf="@id/waterLevelProgressBar"
        app:layout_constraintEnd_toEndOf="@id/waterLevelProgressBar"
        app:layout_constraintTop_toTopOf="@+id/waterLevelProgressBarBack"
        android:layout_marginEnd="12dp"
        >
    </TextView>


    <ImageView
        android:id="@+id/waterDropIconImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_water_drop"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="@id/waterLevelProgressBarBack"
        app:layout_constraintEnd_toEndOf="@id/waterLevelProgressBarBack"
        app:layout_constraintStart_toStartOf="@id/waterLevelProgressBarBack"
        app:layout_constraintTop_toTopOf="@id/waterLevelProgressBarBack">
    </ImageView>

    <ImageView
        android:id="@+id/lightIndicator"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/light_indicatior_off"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toEndOf="@id/waterLevelProgressBarBack"
        app:layout_constraintTop_toTopOf="@id/waterLevelProgressBarBack"></ImageView>

    <ImageView
        android:id="@+id/filterIndicator"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/filter_indicator_off"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.21"
        app:layout_constraintStart_toEndOf="@id/waterLevelProgressBarBack"
        app:layout_constraintTop_toBottomOf="@id/lightIndicator"></ImageView>


    <androidx.cardview.widget.CardView
        android:id="@+id/shortcut1Layout"
        android:layout_width="100dp"
        android:layout_height="100dp"

        android:layout_marginTop="16dp"
        android:background="@drawable/bg_rounded_white"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="@id/shortcut2Layout"
        app:layout_constraintStart_toStartOf="@id/shortcut2Layout"
        app:layout_constraintTop_toBottomOf="@id/waterLevelProgressBarBack">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/shortcut1DeviceImage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:elevation="2dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars"
                tools:visibility="visible" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:elevation="2dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/triangle"
                tools:visibility="visible" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


    <Button
        android:id="@+id/shortcut1deviceButton"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@android:drawable/ic_lock_power_off"
        app:layout_constraintBottom_toBottomOf="@+id/shortcut1deviceNameTextView"
        app:layout_constraintEnd_toEndOf="@+id/shortcut1Layout"
        app:layout_constraintTop_toTopOf="@+id/shortcut1deviceNameTextView" />

    <TextView
        android:id="@+id/shortcut1deviceNameTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:elevation="10dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="LED Light"
        android:textColor="@color/colorPrimaryDark2"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/shortcut1Layout"
        app:layout_constraintEnd_toStartOf="@+id/shortcut1deviceButton"
        app:layout_constraintStart_toStartOf="@id/shortcut1Layout">
    </TextView>

    <ImageView
        android:id="@+id/device1SettingsImageView"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:elevation="5dp"
        app:layout_constraintEnd_toEndOf="@+id/shortcut1Layout"
        app:layout_constraintTop_toTopOf="@+id/shortcut1Layout"
        app:srcCompat="@drawable/ic_settings" />









    <androidx.cardview.widget.CardView
        android:id="@+id/shortcut2Layout"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_rounded_white"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toStartOf="@id/shortcut3Layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shortcut1Layout">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/shortcut2DeviceImage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:elevation="2dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars"
                tools:visibility="visible" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:elevation="2dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/triangle"
                tools:visibility="visible" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/shortcut2deviceButton"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@android:drawable/ic_lock_power_off"
        app:layout_constraintBottom_toBottomOf="@+id/shortcut2deviceNameTextView"
        app:layout_constraintEnd_toEndOf="@+id/shortcut2Layout"
        app:layout_constraintTop_toTopOf="@+id/shortcut2deviceNameTextView" />

    <TextView
        android:id="@+id/shortcut2deviceNameTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:elevation="10dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="LED Light"
        android:textColor="@color/colorPrimaryDark2"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/shortcut2Layout"
        app:layout_constraintEnd_toStartOf="@+id/shortcut2deviceButton"
        app:layout_constraintStart_toStartOf="@id/shortcut2Layout">
    </TextView>

    <ImageView
        android:id="@+id/device2SettingsImageView"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:elevation="5dp"
        app:layout_constraintEnd_toEndOf="@+id/shortcut2Layout"
        app:layout_constraintTop_toTopOf="@+id/shortcut2Layout"
        app:srcCompat="@drawable/ic_settings" />





    <androidx.cardview.widget.CardView
        android:id="@+id/shortcut3Layout"
        android:layout_width="100dp"
        android:layout_height="100dp"

        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_rounded_white"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toStartOf="@id/shortcut4Layout"
        app:layout_constraintStart_toEndOf="@id/shortcut2Layout"
        app:layout_constraintTop_toBottomOf="@id/shortcut1Layout">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/shortcut3DeviceImage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:elevation="2dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars"
                tools:visibility="visible" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:elevation="2dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/triangle"
                tools:visibility="visible" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/shortcut3deviceButton"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@android:drawable/ic_lock_power_off"
        app:layout_constraintBottom_toBottomOf="@+id/shortcut3deviceNameTextView"
        app:layout_constraintEnd_toEndOf="@+id/shortcut3Layout"
        app:layout_constraintTop_toTopOf="@+id/shortcut3deviceNameTextView" />

    <TextView
        android:id="@+id/shortcut3deviceNameTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:elevation="10dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="LED Light"
        android:textColor="@color/colorPrimaryDark2"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/shortcut3Layout"
        app:layout_constraintEnd_toStartOf="@+id/shortcut3deviceButton"
        app:layout_constraintStart_toStartOf="@id/shortcut3Layout">
    </TextView>

    <ImageView
        android:id="@+id/device3SettingsImageView"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:elevation="5dp"
        app:layout_constraintEnd_toEndOf="@+id/shortcut3Layout"
        app:layout_constraintTop_toTopOf="@+id/shortcut3Layout"
        app:srcCompat="@drawable/ic_settings" />









    <androidx.cardview.widget.CardView
        android:id="@+id/shortcut4Layout"
        android:layout_width="100dp"
        android:layout_height="100dp"

        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/bg_rounded_white"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/shortcut3Layout"
        app:layout_constraintTop_toBottomOf="@id/shortcut1Layout">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/shortcut4DeviceImage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:elevation="2dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars"
                tools:visibility="visible" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:elevation="2dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/triangle"
                tools:visibility="visible" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/shortcut4deviceButton"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@android:drawable/ic_lock_power_off"
        app:layout_constraintBottom_toBottomOf="@+id/shortcut4deviceNameTextView"
        app:layout_constraintEnd_toEndOf="@+id/shortcut4Layout"
        app:layout_constraintTop_toTopOf="@+id/shortcut4deviceNameTextView" />

    <TextView
        android:id="@+id/shortcut4deviceNameTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:elevation="10dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="LED Light"
        android:textColor="@color/colorPrimaryDark2"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/shortcut4Layout"
        app:layout_constraintEnd_toStartOf="@+id/shortcut4deviceButton"
        app:layout_constraintStart_toStartOf="@id/shortcut4Layout">
    </TextView>

    <ImageView
        android:id="@+id/device4SettingsImageView"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:elevation="5dp"
        app:layout_constraintEnd_toEndOf="@+id/shortcut4Layout"
        app:layout_constraintTop_toTopOf="@+id/shortcut4Layout"
        app:srcCompat="@drawable/ic_settings" />




    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/bg_top_rounded"
        android:elevation="4dp"
        app:layout_constraintBottom_toTopOf="@+id/navBarSpacer2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline1">

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.pebbles.core.NavBarSpacer
        android:id="@+id/navBarSpacer2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:elevation="4dp"
        android:background="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.pebbles.core.StatusBarSpacer
        android:id="@+id/statusBarSpacer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/itemSelectedView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:elevation="4dp"
        android:background="@drawable/item_selected_bg"
        app:layout_constraintBottom_toBottomOf="@id/myTanksIcon"
        app:layout_constraintEnd_toEndOf="@id/myTanksIcon"
        app:layout_constraintStart_toStartOf="@id/myTanksIcon"
        app:layout_constraintTop_toTopOf="@id/myTanksIcon" />

    <ImageView
        android:id="@+id/sideMenuIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:elevation="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/statusBarSpacer"
        app:srcCompat="@drawable/side_menu_icon" />

    <ImageView
        android:id="@+id/settingsIcon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="16dp"
        android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/taskIcon"
        app:layout_constraintTop_toBottomOf="@id/guideline1"
        app:srcCompat="@drawable/settings_button" />

    <ImageView
        android:id="@+id/taskIcon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="16dp"
        android:elevation="4dp"
        app:layout_constraintEnd_toStartOf="@id/settingsIcon"
        app:layout_constraintStart_toEndOf="@id/otherDevicesIcon"
        app:layout_constraintTop_toBottomOf="@id/guideline1"
        app:srcCompat="@drawable/tasks_button" />

    <ImageView
        android:id="@+id/otherDevicesIcon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="16dp"
        android:elevation="4dp"
        app:layout_constraintEnd_toStartOf="@id/taskIcon"
        app:layout_constraintStart_toEndOf="@id/myTanksIcon"
        app:layout_constraintTop_toBottomOf="@id/guideline1"
        app:srcCompat="@drawable/other_devices_button" />

    <ImageView
        android:id="@+id/myTanksIcon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="16dp"
        android:elevation="4dp"
        app:layout_constraintEnd_toStartOf="@id/otherDevicesIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline1"
        app:srcCompat="@drawable/my_tanks_button" />

</androidx.constraintlayout.motion.widget.MotionLayout>